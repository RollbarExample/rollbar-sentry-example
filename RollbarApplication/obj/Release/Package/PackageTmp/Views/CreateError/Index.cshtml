
@{
    ViewBag.Title = "Rollbar Sentry Example";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rollbar Sentry Example</title>
    <style>
        .hasError {
            background-color: #c3c3c3;
            color: #fff;
            border-radius: 4px;
            font-size: 20px;
        }

        #create-error-div {
            position: absolute;
            left: 10%;
            top: 20%;
            border: 1px solid #ccc;
            padding: 50px 50px;
            background: #d5cece;
        }

        #create-error-div1 {
            position: absolute;
            left: 50%;
            top: 20%;
            border: 1px solid #ccc;
            padding: 50px 50px;
            background: #ccc;           
        }

        #header-div {
            position: absolute;
            border: 1px solid #ccc;
            background: #ccc;
        }
       
      
    </style>
</head>
<body>
    <!-- <div id="header-div">
         Rollbar Example
     </div>-->
    <div class="hasError ErrorContainer">

    </div>
   
    <div id="create-error-div">
        <table>
            <tr>
                <td> <b><i>Rollbar Example</i></b></td>
            </tr>
            <tr>
                <td>
                    @using (Html.BeginForm("GenerateUncaughtErrorForRollbar", "CreateError", FormMethod.Post))
                    {
                        <input style="height:50px;width:200px" type="submit" value="Generate uncought error" name="name" />
                    }

                </td>
                <td>
                    @using (Html.BeginForm("GenerateCoughtErrorForRollbar", "CreateError", FormMethod.Post))
                    {
                        <input style="height:50px;width:200px" type="submit" value="Generate cought error" name="name" />
                    }

                </td>
            </tr>
        </table>
        
    </div>
    <div id="create-error-div1">
        <table>
            <tr>
                <td> <b><i>Sentry Example</i></b></td>
            </tr>
            <tr>
                <td>
                    @using (Html.BeginForm("GenerateUncaughtErrorForSentry", "Sentry", FormMethod.Post))
                    {
                        <input style="height:50px;width:200px" type="submit" value="Generate uncought error" name="name" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("GenerateCoughtErrorForSentry", "Sentry", FormMethod.Post))
                    {
                        <input style="height:50px;width:200px" type="submit" value="Generate cought error" name="name" />
                    }

                </td>
            </tr>
        </table>
    </div>
   
</body>
</html>

